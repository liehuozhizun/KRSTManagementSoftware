<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="show_sql">false</property>
        <property name="format_sql">true</property>
        <property name="dialect">org.hibernate.dialect.SQLiteDialect</property>
        <property name="connection.driver_class">org.sqlite.JDBC</property>
        <property name="connection.url">jdbc:sqlite:data.db</property>
        <!--<property name="connection.username"></property>
        <property name="connection.password"></property>-->

        <property name="hibernate.hbm2ddl.auto">update</property>

        <mapping class="org.krst.app.domains.Student"/>
        <mapping class="org.krst.app.domains.Course"/>
        <mapping class="org.krst.app.domains.CourseTemplate"/>
        <mapping class="org.krst.app.domains.Evaluation"/>
        <mapping class="org.krst.app.domains.Grade"/>
        <mapping class="org.krst.app.domains.Internship"/>
        <mapping class="org.krst.app.domains.Login"/>
        <mapping class="org.krst.app.domains.Relation"/>
        <mapping class="org.krst.app.domains.Staff"/>
        <mapping class="org.krst.app.domains.Teacher"/>
        <mapping class="org.krst.app.domains.Visit"/>
        <mapping class="org.krst.app.domains.PatronSaintDate"/>

    </session-factory>
</hibernate-configuration>